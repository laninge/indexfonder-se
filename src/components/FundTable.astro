---
interface Fund {
  name: string;
  index: string;
  fee: string;
  return1y: string;
  return5y: string;
  risk: string;
}

interface Props {
  title: string;
  funds: Fund[];
}

const { title, funds } = Astro.props;
---

<div class="fund-table">
  <h3 class="fund-table__title">{title}</h3>
  <div class="table-wrapper">
    <table>
      <thead>
        <tr>
          <th>Fond</th>
          <th>Index</th>
          <th>Avgift</th>
          <th>1 år</th>
          <th>5 år</th>
          <th>Risk</th>
        </tr>
      </thead>
      <tbody>
        {funds.map((fund, index) => (
          <tr>
            <td>
              <div class="fund-table__name">
                <span class="fund-table__rank">{index + 1}</span>
                {fund.name}
              </div>
            </td>
            <td class="text-muted">{fund.index}</td>
            <td><span class="fund-table__fee">{fund.fee}</span></td>
            <td class={fund.return1y.startsWith('-') ? 'text-red' : 'text-green'}>{fund.return1y}</td>
            <td class={fund.return5y.startsWith('-') ? 'text-red' : 'text-green'}>{fund.return5y}</td>
            <td>
              <span class={`fund-table__risk fund-table__risk--${fund.risk.toLowerCase()}`}>
                {fund.risk}
              </span>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
  <p class="fund-table__disclaimer">
    *Historisk avkastning är ingen garanti för framtida avkastning. Data uppdaterad februari 2026.
  </p>
</div>

<style>
  .fund-table {
    margin-bottom: 2rem;
  }

  .fund-table__title {
    margin-bottom: 1rem;
    font-size: var(--font-size-xl);
  }

  .fund-table__name {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-weight: 500;
  }

  .fund-table__rank {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    background-color: var(--gray-100);
    border-radius: var(--radius-full);
    font-size: var(--font-size-xs);
    font-weight: 600;
    color: var(--gray-600);
  }

  tr:first-child .fund-table__rank {
    background-color: var(--blue);
    color: var(--white);
  }

  .fund-table__fee {
    background-color: var(--gray-100);
    padding: 0.25rem 0.5rem;
    border-radius: var(--radius-sm);
    font-size: var(--font-size-sm);
    font-weight: 500;
  }

  .fund-table__risk {
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-full);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
  }

  .fund-table__risk--låg {
    background-color: #dcfce7;
    color: #166534;
  }

  .fund-table__risk--medel {
    background-color: #fef3c7;
    color: #92400e;
  }

  .fund-table__risk--hög {
    background-color: #fee2e2;
    color: #991b1b;
  }

  .fund-table__disclaimer {
    font-size: var(--font-size-sm);
    color: var(--gray-500);
    margin-top: 1rem;
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .table-wrapper {
      margin: 0 calc(-1 * var(--container-padding));
      border-radius: 0;
      border-left: none;
      border-right: none;
    }

    td, th {
      padding: 0.75rem;
      font-size: var(--font-size-sm);
    }
  }
</style>
