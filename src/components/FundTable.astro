---
interface Fund {
  name: string;
  index: string;
  fee: string;
  return1y: string;
  return5y: string;
  risk: string;
  institutional?: boolean;
}

interface Props {
  title: string;
  funds: Fund[];
  showInstitutional?: boolean;
}

const { title, funds, showInstitutional = true } = Astro.props;

// Filter funds based on showInstitutional setting
const displayFunds = showInstitutional
  ? funds
  : funds.filter(f => !f.institutional);

// Count institutional funds
const institutionalCount = funds.filter(f => f.institutional).length;
const retailCount = funds.filter(f => !f.institutional).length;
---

<div class="fund-table">
  <div class="fund-table__header">
    <h3 class="fund-table__title">{title}</h3>
    <div class="fund-table__meta">
      <span class="fund-table__count">{retailCount} fonder för privatpersoner</span>
      {institutionalCount > 0 && (
        <span class="fund-table__count fund-table__count--inst">{institutionalCount} institutionella</span>
      )}
    </div>
  </div>
  <div class="table-wrapper">
    <table>
      <thead>
        <tr>
          <th>Fond</th>
          <th>Index</th>
          <th>Avgift</th>
          <th>1 år</th>
          <th>5 år</th>
          <th>Risk</th>
        </tr>
      </thead>
      <tbody>
        {displayFunds.map((fund, index) => (
          <tr class={fund.institutional ? 'fund-table__row--inst' : ''}>
            <td>
              <div class="fund-table__name">
                <span class="fund-table__rank">{index + 1}</span>
                <span>
                  {fund.name}
                  {fund.institutional && (
                    <span class="fund-table__badge" title="Endast för institutionella investerare">Inst</span>
                  )}
                </span>
              </div>
            </td>
            <td class="text-muted">{fund.index}</td>
            <td><span class="fund-table__fee">{fund.fee}</span></td>
            <td class={fund.return1y.startsWith('-') ? 'text-red' : 'text-green'}>{fund.return1y}</td>
            <td class={fund.return5y.startsWith('-') ? 'text-red' : 'text-green'}>{fund.return5y}</td>
            <td>
              <span class={`fund-table__risk fund-table__risk--${fund.risk.toLowerCase()}`}>
                {fund.risk}
              </span>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
  <p class="fund-table__disclaimer">
    *Historisk avkastning är ingen garanti för framtida avkastning. Data uppdateras månadsvis.
    <span class="fund-table__inst-note">Fonder markerade "Inst" är endast tillgängliga för institutionella investerare.</span>
  </p>
</div>

<style>
  .fund-table {
    margin-bottom: 2rem;
  }

  .fund-table__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .fund-table__title {
    margin-bottom: 0;
    font-size: var(--font-size-xl);
  }

  .fund-table__meta {
    display: flex;
    gap: 0.75rem;
    font-size: var(--font-size-sm);
  }

  .fund-table__count {
    color: var(--gray-500);
  }

  .fund-table__count--inst {
    color: var(--opti-mint);
  }

  .fund-table__name {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-weight: 500;
  }

  .fund-table__badge {
    display: inline-block;
    margin-left: 0.5rem;
    padding: 0.125rem 0.375rem;
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    background-color: var(--opti-mint-light);
    color: var(--opti-mint);
    border-radius: var(--radius-sm);
    vertical-align: middle;
  }

  .fund-table__row--inst {
    background-color: var(--opti-mint-light);
  }

  .fund-table__row--inst:hover td {
    background-color: var(--opti-mint-medium) !important;
  }

  .fund-table__inst-note {
    display: block;
    margin-top: 0.25rem;
  }

  .fund-table__rank {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    background-color: var(--gray-100);
    border-radius: var(--radius-full);
    font-size: var(--font-size-xs);
    font-weight: 600;
    color: var(--gray-600);
  }

  tr:first-child .fund-table__rank {
    background-color: var(--blue);
    color: var(--white);
  }

  .fund-table__fee {
    background-color: var(--gray-100);
    padding: 0.25rem 0.5rem;
    border-radius: var(--radius-sm);
    font-size: var(--font-size-sm);
    font-weight: 500;
  }

  .fund-table__risk {
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-full);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
  }

  .fund-table__risk--låg {
    background-color: #dcfce7;
    color: #166534;
  }

  .fund-table__risk--medel {
    background-color: #fef3c7;
    color: #92400e;
  }

  .fund-table__risk--hög {
    background-color: #fee2e2;
    color: #991b1b;
  }

  .fund-table__disclaimer {
    font-size: var(--font-size-sm);
    color: var(--gray-500);
    margin-top: 1rem;
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .table-wrapper {
      margin: 0 calc(-1 * var(--container-padding));
      border-radius: 0;
      border-left: none;
      border-right: none;
    }

    td, th {
      padding: 0.75rem;
      font-size: var(--font-size-sm);
    }
  }
</style>
