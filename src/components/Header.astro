---
const navItems = [
  { label: 'Vad är indexfond?', href: '#vad-ar-indexfond' },
  { label: 'Hur fungerar det?', href: '#hur-fungerar' },
  { label: 'Välj rätt fond', href: '#hur-valjer-du' },
  { label: 'Bästa fonderna', href: '#basta-indexfonder' },
  { label: 'Börja spara', href: '#borja-spara' },
];
---

<header class="header">
  <div class="container header__container">
    <a href="/" class="header__logo">
      <svg width="120" height="32" viewBox="0 0 120 32" fill="none" xmlns="http://www.w3.org/2000/svg">
        <text x="0" y="24" fill="white" font-family="OptiSans, sans-serif" font-weight="700" font-size="24">indexfonder</text>
      </svg>
    </a>

    <nav class="header__nav">
      {navItems.map(item => (
        <a href={item.href} class="header__link">{item.label}</a>
      ))}
    </nav>

    <a href="https://opti.se" class="btn btn--mint header__cta" target="_blank" rel="noopener">
      Prova Opti
    </a>

    <button class="header__menu-btn" aria-label="Öppna meny">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
    </button>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background-color: rgba(15, 23, 42, 0.95);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 72px;
  }

  .header__logo {
    display: flex;
    align-items: center;
  }

  .header__nav {
    display: flex;
    gap: 2rem;
  }

  .header__link {
    color: var(--gray-300);
    font-size: var(--font-size-sm);
    font-weight: 500;
    transition: color var(--transition-fast);
  }

  .header__link:hover {
    color: var(--white);
  }

  .header__cta {
    padding: 0.625rem 1.25rem;
    font-size: var(--font-size-sm);
  }

  .header__menu-btn {
    display: none;
    background: none;
    border: none;
    color: var(--white);
    cursor: pointer;
    padding: 0.5rem;
  }

  @media (max-width: 1024px) {
    .header__nav {
      display: none;
    }

    .header__menu-btn {
      display: block;
    }

    .header__cta {
      display: none;
    }
  }
</style>

<script>
  // Mobile menu toggle
  const menuBtn = document.querySelector('.header__menu-btn');
  const nav = document.querySelector('.header__nav');

  menuBtn?.addEventListener('click', () => {
    nav?.classList.toggle('header__nav--open');
  });

  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        const headerHeight = 72;
        const targetPosition = target.getBoundingClientRect().top + window.pageYOffset - headerHeight;
        window.scrollTo({
          top: targetPosition,
          behavior: 'smooth'
        });
      }
    });
  });
</script>
