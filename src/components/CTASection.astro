<style>
  .cta-section {
    padding: 5rem 0;
  }

  .cta-content {
    text-align: center;
    margin-bottom: 3rem;
  }

  .cta-content h2 {
    font-size: var(--font-size-3xl);
    margin-bottom: 0.75rem;
    color: var(--navy);
  }

  .cta-content p {
    font-size: var(--font-size-lg);
    color: var(--gray-500);
    margin-bottom: 2rem;
  }

  .cta-badges {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .app-badge {
    display: block;
    transition: transform var(--transition-fast);
  }

  .app-badge:hover {
    transform: translateY(-2px);
  }

  .app-badge svg {
    display: block;
  }

  .cta-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    flex-wrap: wrap;
  }

  .cta-stat {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .cta-stat__icon {
    color: #fbbf24;
  }

  .cta-stat__number {
    font-weight: 700;
    color: var(--navy);
  }

  .cta-stat__label {
    font-size: var(--font-size-sm);
    color: var(--gray-500);
  }

  @media (max-width: 600px) {
    .cta-stats {
      gap: 1.5rem;
    }

    .cta-stat {
      flex-direction: column;
      text-align: center;
      gap: 0.25rem;
    }
  }
</style>
